{
  "name": "snippetfy",
  "version": "0.8.1",
  "description": "Extracts code snippets from source files",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "snippetfy": "./bin/run"
  },
  "files": [
    "/bin",
    "/dist",
    "/lib"
  ],
  "oclif": {
    "default": "generate",
    "commands": "./dist/cli",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "scripts": {
    "build:bundle": "rollup -c",
    "build:lib": "tsc --project tsconfig.lib.json",
    "build:cli": "tsc --project tsconfig.cli.json",
    "build": "npm run build:lib && npm run build:cli",
    "docs:readme": "cp README.md ./docs/_includes/home.md",
    "docs:snippetfy": "./bin/run generate --out docs/snippets.json",
    "docs:typedoc": "typedoc",
    "docs": "npm run docs:cli & npm run docs:readme & npm run docs:typedoc",
    "format:imports": "organize-imports-cli tsconfig.json",
    "format:prettier": "prettier --write \"./**/*.{js,json,ts}\"",
    "format:check": "prettier --check \"./**/*.{js,json,ts}\"",
    "format": "npm run format:imports && npm run format:prettier",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roxlabs/snippetfy.git"
  },
  "keywords": [
    "snippet",
    "code snippet",
    "code sample"
  ],
  "author": "Daniel Rochetti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/roxlabs/snippetfy/issues"
  },
  "homepage": "https://github.com/roxlabs/snippetfy#readme",
  "dependencies": {
    "@oclif/core": "^2",
    "@oclif/plugin-help": "^5",
    "async": "^3.2.4",
    "fast-glob": "^3.2.11"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@oclif/test": "^2.4.7",
    "@types/async": "^3.2.7",
    "@types/jest": "^26.0.24",
    "@types/node": "^18.17.14",
    "babel-jest": "^27.0.6",
    "cross-env": "^7.0.3",
    "jest": "^27.0.6",
    "oclif": "^3.14.0",
    "organize-imports-cli": "^0.10.0",
    "prettier": "^3.0.3",
    "shx": "^0.3.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.1",
    "typedoc-plugin-markdown": "^3.16.0",
    "typescript": "^4.9.5"
  }
}
